                <label for="jpgInput" class="block text-sm font-medium text-gray-300 mb-2">Select JPG Images</label>
                <input type="file" id="jpgInput" accept="image/jpeg" multiple class="block w-full text-sm text-gray-400 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-700 file:text-white hover:file:bg-blue-800 tooltip" data-tooltip="Choose one or more JPG files to convert" aria-label="Upload JPG files">
